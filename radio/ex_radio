    <br><br>

    <button onclick="clique()">Clicar!</button>


    <script>
        function clique(){
            let estado_civil = document.getElementsByName('estado_civil');
            let i;

            for(i = 0; i < estado_civil.length; i++){
                if(estado_civil[i]. checked){
                    alert(`VocÃª selecionou ${estado_civil[i].value}.`);

                    break
                }
            }
        }
    </script>


