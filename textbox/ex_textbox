<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Textbox</title>
</head>
<body>
    <label for="nome">Nome: </label>
    <input type="text" id="nome">
    <button onclick="mostrar()">Clicar!</button>

    <script>
        function mostrar(){
            let nome = document.getElementById('nome').value;
            alert(`Ola, ${nome}!`);
        }
    </script>
</body>
</html>
